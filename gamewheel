<head>
  <meta charset="UTF-8">
  <title>วงล้อสุ่ม</title>
  <style>
    #wheel { width: 300px; height: 300px; border-radius: 50%; border: 10px solid #333; }
    #result { margin-top: 20px; font-size: 20px; font-weight: bold; }
  </style>
</head>
<body>
  <button onclick="spin()">หมุนวงล้อ</button>
  <canvas id="wheel"></canvas>
  <div id="result"></div>

  <script>
    const options = ["Quiz 1", "Quiz 2", "Skip Turn", "+10 คะแนน", "-5 คะแนน"];
    
    function spin() {
      let randomIndex = Math.floor(Math.random() * options.length);
      document.getElementById("result").innerText = "คุณได้: " + options[randomIndex];
    }
  </script>
</body>
